<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ff00"
    android:orientation="vertical"
    tools:context="com.ouyangzn.module.testLoadingView.LoadingActivity"
    >
  <LinearLayout
      android:id="@+id/activity_test_loading"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <com.ouyangzn.view.LoadingView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.ouyangzn.view.LoadingView2
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#ff0000"
        android:padding="5dp"
        />
    <com.ouyangzn.view.LoadingView3
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        />
    <com.ouyangzn.view.LoadingView4
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#888888"
        android:padding="5dp"
        />
    <com.ouyangzn.view.LoadingView5
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:background="#888888"
        android:padding="5dp"
        />
  </LinearLayout>
</ScrollView>
